
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for WODs subcollection
    match /users/{userId}/wods/{wodId} {
      // Only the owner can read or write their own WODs.
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Rules for the public community WODs collection
    match /communityWods/{document=**} {
      // Anyone can read the collection or any single document within it.
      allow read: if true;
    }

    // New rule for creating community WODs, separated for clarity
    match /communityWods/{wodId} {
        // Only signed-in (non-anonymous) users can create community WODs.
        allow create: if isSignedIn() && request.auth.token.firebase.sign_in_provider != 'anonymous';
        // No one can update or delete community WODs directly for data integrity.
        allow update, delete: if false;
    }
  }
}
