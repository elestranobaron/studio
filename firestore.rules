/**
 * @fileoverview Firestore Security Rules for WOD management.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, where each user has full control over their own WODs.
 *
 * Data Structure:
 * All WOD data is nested under /users/{userId}/wods/{wodId}, ensuring data isolation between users.
 *
 * Key Security Decisions:
 * - Users can only access their own WODs.
 * - WOD listing is restricted to the owner.
 *
 * Denormalization for Authorization:
 * The rules rely on the path-based userId to ensure authorization. The data within the WOD documents does not need to be read to determine ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures WOD documents created by a specific user.
     * @path /users/{userId}/wods/{wodId}
     * @allow (create) - User 'user123' creates a new WOD under /users/user123/wods/wod456.
     * @allow (get) - User 'user123' retrieves their WOD from /users/user123/wods/wod456.
     * @allow (update) - User 'user123' updates their WOD at /users/user123/wods/wod456.
     * @allow (delete) - User 'user123' deletes their WOD at /users/user123/wods/wod456.
     * @deny (create) - User 'user456' attempts to create a WOD under /users/user123/wods/wod456.
     * @deny (get) - User 'user456' attempts to retrieve WOD from /users/user123/wods/wod456.
     * @deny (update) - User 'user456' attempts to update WOD at /users/user123/wods/wod456.
     * @deny (delete) - User 'user456' attempts to delete WOD at /users/user123/wods/wod456.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/wods/{wodId} {
      // Allow reads: get
      allow get: if isSignedIn() && isOwner(userId);

      // Allow reads: list
      allow list: if isSignedIn() && isOwner(userId);

      // Allow writes: create
      allow create: if isSignedIn() && isOwner(userId) && isValidWodCreateRequest(wodId);

      // Allow writes: update
      allow update: if isSignedIn() && isExistingOwner(userId) && isWodUpdateRequestValid();

      // Allow writes: delete
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    // ---- Helper functions ----

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the document based on the path.
     * @param {string} userId The user ID from the path.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the owner of the document and it exists.
     * @param {string} userId The user ID from the path.
     * @return {bool} True if the user is the owner and document exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
    }

    /**
     * @description Validates the create request for a WOD document.
     * @param {string} userId The user ID from the path.
     * @param {string} wodId The wod ID from the path.
     * @return {bool} True if the request is valid, false otherwise.
     */
    function isValidWodCreateRequest(wodId) {
        return request.resource.data.id == wodId;
    }

    /**
     * @description Validates the update request for a WOD document. Enforces immutability of userId.
     * @param {string} userId The user ID from the path.
     * @param {string} wodId The wod ID from the path.
     * @return {bool} True if the request is valid, false otherwise.
     */
    function isWodUpdateRequestValid() {
        return request.resource.data.id == resource.data.id;
    }
  }
}