
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is a real, registered user (not anonymous).
    function isRegisteredUser() {
      return isSignedIn() && request.auth.token.firebase.sign_in_provider != 'anonymous';
    }

    // Helper function to check if the requesting user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to get the requesting user's data document.
    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Rules for the users collection
    match /users/{userId} {
        // A user can read and write to their own document.
        allow read, write: if isOwner(userId);
    }

    // Rules for WODs subcollection
    match /users/{userId}/wods/{wodId} {
      // Only the owner can read or write their own WODs.
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Rules for the public community WODs collection
    match /communityWods/{wodId} {
        // Any registered (non-anonymous) user can read the community WODs.
        allow read: if isRegisteredUser();

        // A registered user can share (create) a WOD if the data being sent
        // includes their own userId. This prevents spoofing.
        allow create: if isRegisteredUser() && request.resource.data.userId == request.auth.uid;
        
        // A user can only delete a community WOD if they are its original author.
        allow delete: if isRegisteredUser() && resource.data.userId == request.auth.uid;
        
        // Users can update the reactions on a WOD.
        allow update: if isRegisteredUser();

        // --- RULES FOR REACTIONS ---
        // A registered user can read their own reaction document.
        match /reactors/{reactorId} {
          allow read: if isRegisteredUser() && isOwner(reactorId);
          
          // A user can create a reaction if they are premium OR have not exceeded their daily quota.
          allow create: if isRegisteredUser() && isOwner(reactorId) 
                         && (getUserData().premium == true || getUserData().dailyReactions < 5);
                         
          // A user can delete their own reaction. This does not count against a quota.
          allow delete: if isRegisteredUser() && isOwner(reactorId);
        }
    }
  }
}
