
{
  "hosting": {
    "target": "app",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Link",
            "value": "<https://wodburner.app{uri}>; rel=\"canonical\""
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "auth": {
    "authorizedDomains": [
      "localhost",
      "wodburner.app"
    ]
  }
}
