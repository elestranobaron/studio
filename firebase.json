{
  "hosting": [
    {
      "target": "app",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "landing",
      "public": "public-landing",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "/:path*",
          "destination": "https://wodburner.app/:path",
          "type": 301
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "auth": {
    "authorizedDomains": [
      "localhost",
      "wodburner.app"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs22",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
